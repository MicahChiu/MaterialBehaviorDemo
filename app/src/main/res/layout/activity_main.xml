<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.ingx.materialdemo.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="bottomSheetBehaviorClick"
        android:text="BottomSheetBehaviorDemo" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="bottomSheetBehaviorDialogClick"
        android:text="BottomSheetBehaviorDialogDemo" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="scaleUpShowBehaviorClick"
        android:text="ScaleUpShowBehaviorDemo" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="pullImgStretchBehaviorDemoClick"
        android:text="PullImgStretchBehaviorDemo" />
</LinearLayout>
